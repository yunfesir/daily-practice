#include<stdio.h>
#include<string.h>
int main()
{
    char str[10];
    scanf("%s",str);
    int lengh=strlen(str);
    printf("%d\n",lengh);
    for(int i=0;i<lengh;i++)
    {
        printf("%c ",str[i]);
    }
    printf("\n");
    for(int i=lengh-1;i>=0;i--)
    {
        printf("%c",str[i]);
    }
    return 0;
}
